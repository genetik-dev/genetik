{
  "name": "@genetik/ui-react",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.mts"
    },
    "./dist/styles.css": "./dist/styles.css",
    "./dist/theme.css": "./dist/theme.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:js && pnpm run build:css",
    "build:js": "tsdown",
    "build:css": "node build-css.mjs",
    "dev": "tsdown --watch",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "tailwind-merge": "^2.6.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@genetik/eslint-config": "workspace:*",
    "@genetik/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.0.0",
    "eslint": "^9.39.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.0",
    "tsdown": "0.20.3",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT"
}
