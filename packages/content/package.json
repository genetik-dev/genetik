{
  "name": "@genetik/content",
  "version": "0.0.0",
  "type": "module",
  "publishConfig": { "access": "public" },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.mts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@genetik/schema": "workspace:*",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "@genetik/eslint-config": "workspace:*",
    "@genetik/typescript-config": "workspace:*",
    "eslint": "^9.39.1",
    "tsdown": "0.20.3",
    "typescript": "5.9.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT"
}
